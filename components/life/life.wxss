/* components/life/life.wxss */
.life{
  margin-top: 20rpx;
  border-top: 1rpx solid black;
}
.life-box{
  display: inline-block;
  width: 24.6%;
  text-align: center;
  font-size: 22rpx;
  border-left: 1rpx solid darkgray;
  border-bottom: 1rpx solid darkgray;
}
.life-box:nth-child(10){
  border-bottom: none;
  border-right:1rpx solid darkgray ;
}
.content{
  display: block;
  padding: 5rpx 0;
}
.name{
  font-size: 22rpx;
  font-weight: bolder;
  color: rgba(0, 68, 255, 0.6);
}
.level{
  font-size: 20rpx;
  color: rgba(255, 0, 0, 0.384);
}
.category{
  color: rgba(0, 139, 120, 0.767);
}